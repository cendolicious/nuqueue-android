<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/palewhite">

    <android.support.design.widget.AppBarLayout
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <android.support.v7.widget.Toolbar
            android:id="@+id/custtoolbar"
            android:minHeight="?attr/actionBarSize"
            android:background="@color/colorPrimaryDark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </android.support.design.widget.AppBarLayout>
    <android.support.v7.widget.CardView

        android:layout_margin="@dimen/activity_horizontal_margin"
        android:elevation="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="3dp">

        <LinearLayout
            android:padding="@dimen/activity_horizontal_margin"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginBottom="10dp"
                android:textColor="@color/colorPrimaryDark"
                fontPath="font/OpenSans-Semibold.ttf"
                android:textSize="17sp"
                android:layout_gravity="center"
                android:text="Konfirmasi Pendaftaran Antrian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:ignore="MissingPrefix" />

            <TextView
                android:textColor="@color/colorPrimary"
                android:id="@+id/namaMember"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/activity_horizontal_margin"
                android:text="Nama"
                android:textSize="20sp"
                android:textStyle="bold"
                tools:ignore="MissingPrefix" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_weight="1"
                    android:gravity="center|start"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <RelativeLayout
                        android:layout_marginBottom="13dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_centerVertical="true"
                            android:id="@+id/iconttl"
                            android:src="@drawable/calendar"
                            android:layout_width="24dp"
                            android:layout_height="24dp" />
                        <LinearLayout
                            android:layout_marginLeft="10dp"
                            android:layout_toRightOf="@id/iconttl"
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <TextView
                                android:textColor="@color/colorPrimary"
                                fontPath="font/OpenSans-Semibold.ttf"
                                tools:ignore="MissingPrefix"
                                android:id="@+id/textView3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Tanggal Lahir" />

                            <TextView
                                android:id="@+id/ttlMember"
                                android:textStyle="bold"
                                android:text="TTL"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </LinearLayout>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_marginBottom="13dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_centerVertical="true"
                            android:id="@+id/icongender"
                            android:src="@drawable/gender"
                            android:layout_width="24dp"
                            android:layout_height="24dp" />
                        <LinearLayout
                            android:layout_marginLeft="10dp"
                            android:layout_toRightOf="@id/icongender"
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <TextView
                                android:textColor="@color/colorPrimary"
                                fontPath="font/OpenSans-Semibold.ttf"
                                tools:ignore="MissingPrefix"
                                android:text="Jenis Kelamin"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                            <TextView
                                android:id="@+id/jkMember"
                                android:textStyle="bold"
                                android:text="Jenis Kelamin"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </LinearLayout>
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_weight="0.2"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <RelativeLayout
                        android:layout_marginBottom="13dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_centerVertical="true"
                            android:id="@+id/iconalamat"
                            android:src="@drawable/pin"
                            android:layout_width="24dp"
                            android:layout_height="24dp" />
                        <LinearLayout
                            android:layout_marginLeft="10dp"
                            android:layout_toRightOf="@id/iconalamat"
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <TextView
                                android:textColor="@color/colorPrimary"
                                fontPath="font/OpenSans-Semibold.ttf"
                                tools:ignore="MissingPrefix"
                                android:text="Alamat"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                            <TextView
                                android:id="@+id/alamatMember"
                                android:textStyle="bold"
                                android:text="Alamat"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </LinearLayout>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_centerVertical="true"
                            android:id="@+id/icontelp"
                            android:src="@drawable/phone"
                            android:layout_width="24dp"
                            android:layout_height="24dp" />
                        <LinearLayout
                            android:layout_marginLeft="10dp"
                            android:layout_toRightOf="@id/icontelp"
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <TextView
                                android:textColor="@color/colorPrimary"
                                android:text="Telepon"
                                fontPath="font/OpenSans-Semibold.ttf"
                                tools:ignore="MissingPrefix"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                            <TextView
                                android:id="@+id/telpMember"
                                android:textStyle="bold"
                                android:text="Telepon Member"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </LinearLayout>
                    </RelativeLayout>
                </LinearLayout>

            </LinearLayout>

            <Button
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:id="@+id/btnBooking"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorPrimaryDark"
                android:elevation="4dp"
                android:text="daftar"
                android:textColor="#FFFFFF" />


        </LinearLayout>
    </android.support.v7.widget.CardView>



</LinearLayout>
